<apex:page standardController="Opportunity" extensions="CustomLookupController" sidebar="false" showheader="false">
    <apex:form id="form" >  
        <apex:pageBlock title="Manage Opportunity">
            <apex:pageBlockSection title="Basic Info" columns="1">
                <apex:outputField value="{!Opportunity.Name}"/>
                <apex:outputField value="{!Opportunity.Manager__c}"/>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection title="Manager contacts">
                <apex:selectRadio value="{!opportunity.BillToContact__c}" layout="pageDirection">
                    <apex:selectOptions value="{!items}"/><br/><br/>
                </apex:selectRadio><br/>  
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!setManager}" value="Save" oncomplete="window.top.close();" />
                <apex:commandButton action="{!removeManager}" value="Clear" oncomplete="window.top.close();"  />
                <apex:commandButton value="Cancel" onclick="window.top.close();" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>