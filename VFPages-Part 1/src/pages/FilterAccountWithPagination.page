<apex:page controller="FilterAccountWithPaginationController">
    <apex:form >
        <apex:pageblock id="pb">
            <apex:pageBlockSection >
                Billing City <apex:inputText value="{!getBillingCitystring}" id="BillingCity" />
                Billing State <apex:inputText value="{!getBillingStatestring}" id="BillingState"/>
                Billing Country <apex:inputText value="{!getBillingCountrystring}" id="BillingCountry"/>
                <apex:commandButton action="{!refresh}" value="Search" id="theSearch"/>
            </apex:pageBlockSection>
           
            <apex:pageBlock >
                <apex:pageBlockTable value="{!Accounts}" var="records">
                    <apex:column value="{!records.Name}"  headerValue="Name"/>
                    <apex:column value="{!records.BillingCity}" headerValue="Billing City"/>
                    <apex:column value="{!records.BillingState}" headerValue="Billing State"/>
                    <apex:column value="{!records.BillingCountry}" headerValue="Billing Country"/>
                </apex:pageBlockTable>
            </apex:pageBlock>
            <apex:panelGrid columns="7">
                <apex:commandButton status="fetchStatus" reRender="pb" value="|<" action="{!setCon.first}" disabled="{!!setCon.hasPrevious}" title="First Page"/>
                <apex:commandButton status="fetchStatus" reRender="pb" value="<" action="{!setCon.previous}" disabled="{!!setCon.hasPrevious}" title="Previous Page"/>
                <apex:commandButton status="fetchStatus" reRender="pb" value=">" action="{!setCon.next}" disabled="{!!setCon.hasNext}" title="Next Page"/>
                <apex:commandButton status="fetchStatus" reRender="pb" value=">|" action="{!setCon.last}" disabled="{!!setCon.hasNext}" title="Last Page"/>
                <apex:outputText >{!(setCon.pageNumber * size)+1-size}-{!IF((setCon.pageNumber * size)>noOfRecords, noOfRecords,(setCon.pageNumber * size))} of {!noOfRecords}</apex:outputText>
                <apex:commandButton status="fetchStatus" reRender="pb" value="Refresh" action="{!refresh}" title="Refresh Page"/>
                <apex:outputPanel style="color:#4AA02C;font-weight:bold">
                    <apex:actionStatus id="fetchStatus" startText="Fetching..." stopText=""/>
                </apex:outputPanel>
            </apex:panelGrid>
        </apex:pageblock>
    </apex:form>
</apex:page>